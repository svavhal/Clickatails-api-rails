<p id="notice"><%= notice %></p>
<div class="container">
<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Listing Sms Texts</div>
  <div class="panel-body">
    <p>...</p>
  </div>

  <!-- Table -->
<table class="table table-striped">
  <thead>
    <tr>
      <th>Recipient</th>
      <th>Sms message</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @sms_texts.each do |sms_text| %>
      <tr>
        <td><%= sms_text.recipient %></td>
        <td><%= sms_text.sms_message %></td>
        <td><%= link_to 'Show', sms_text %></td>
        <td><%= link_to 'Edit', edit_sms_text_path(sms_text) %></td>
        <td><%= link_to 'Destroy', sms_text, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Sms text', new_sms_text_path, class: 'btn btn-primary' %>
</div>
</div>
